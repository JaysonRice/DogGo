@model Doggo.Models.ViewModels.WalkerViewModel

@{ ViewData["Title"] = "Profile"; }

<div>
    <h1 class="mb-4">@Model.Walker.Name's Profile</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="@Model.Walker.ImageUrl" />
        <div>
            <div>
                <label class="font-weight-bold">Name:</label>
                <span>@Model.Walker.Name</span>
            </div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h2 class="text-left">Recent Walks</h2>

            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>Date</th>
                        <th>Client</th>
                        <th>Duration</th>
                    </tr>
                </thead>
                @foreach (Walk walk in Model.Walks)
                {
                    <tr>
                        <td>@walk.Date</td>
                        <td>@walk.Client.Name</td>
                        <td>@walk.Duration min</td>
                    </tr>
                }
            </table>
        </section>

        <section class="col-lg-4 col-md-8 container mt-5">
            <h3 style="color:grey">Total Walk Time: </h3>
            <h3>@Model.TotalDuration minutes</h3>
        </section>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
